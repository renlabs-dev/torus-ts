{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug torus-worker",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}/apps/torus-worker",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "debug torus-sdk-ts",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}/packages/torus-sdk-ts",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "debug torus-wallet",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}/apps/torus-wallet",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "debug utils",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm exec tsx --inspect-wait ./src/main.ts",
      "cwd": "${workspaceFolder}/packages/utils",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "debug torus-allocator",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}/apps/torus-allocator",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
