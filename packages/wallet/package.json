    "react": "catalog:react18"
  },
  "devDependencies": {
    "@torus-ts/eslint-config": "workspace:*",
    "@torus-ts/tailwind-config": "workspace:*",
    "@torus-ts/tsconfig": "workspace:*",
    "@types/react": "catalog:react18",
    "eslint": "catalog:",
    "postcss": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
