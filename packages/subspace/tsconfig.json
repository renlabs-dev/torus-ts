{
  "extends": "@torus-ts/tsconfig/internal-package.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["*.ts", "types", "utils", "queries"],
  "exclude": ["node_modules", "dist"]
}
