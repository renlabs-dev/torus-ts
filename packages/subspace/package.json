{
  "name": "@torus-ts/subspace",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./queries": "./src/queries/index.ts"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "generate-types-from-defs": "tsx ../../node_modules/.bin/polkadot-types-from-defs --package @torus-ts/subspace/interfaces --input ./src/interfaces --endpoint ../../data/metadata/mainnet.json",
    "generate-types-from-chain": "tsx ../../node_modules/.bin/polkadot-types-from-chain --package @torus-ts/subspace/interfaces --endpoint ../../data/metadata/mainnet.json --output ./src/interfaces",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@polkadot/api": "catalog:",
    "@polkadot/types": "catalog:",
    "@polkadot/util-crypto": "catalog:",
    "@torus-ts/types": "workspace:*",
    "@torus-ts/utils": "workspace:*",
    "multiformats": "catalog:",
    "rustie": "catalog:",
    "superjson": "2.2.1",
    "tsafe": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@polkadot/typegen": "catalog:",
    "@torus-ts/eslint-config": "workspace:*",
    "@torus-ts/tsconfig": "workspace:*",
    "tsx": "catalog:"
  },
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true
  }
}
