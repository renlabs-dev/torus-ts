{
  "name": "torus-ts",
  "private": true,
  "scripts": {
    "api:build": "turbo -F @torus-ts/api build",
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:all": "find . -type d \\( -name 'node_modules' -o -name '.next' -o -name '.turbo' -o -name 'dist' -o -name '.cache' \\) -prune -exec rm -rf '{}' +",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @torus-ts/db push",
    "db:studio": "turbo -F @torus-ts/db studio",
    "dev": "turbo watch dev",
    "dev:api": "turbo watch dev -F @torus-ts/api",
    "dev:cache": "turbo dev -F torus-cache",
    "dev:db": "turbo watch dev -F @torus-ts/db",
    "dev:forum": "turbo watch dev -F torus-forum",
    "dev:governance": "turbo watch dev -F torus-governance",
    "dev:page": "turbo watch dev -F torus-page",
    "dev:validator": "turbo watch dev -F torus-validator",
    "dev:wallet": "turbo watch dev -F torus-wallet",
    "dev:worker": "turbo watch dev -F torus-worker",
    "docker:build:torus-cache:digitalocean": "docker build -f ./tooling/dockerfile/backend-service.Dockerfile -t torus-cache:latest --build-arg PORT=8080 --build-arg PROJECT=torus-cache --platform linux/amd64,linux/arm64 . && docker tag torus-cache:latest ghcr.io/renlabs-dev/torus-cache:latest  && docker push ghcr.io/renlabs-dev/torus-cache:latest",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "sort:packages": "find . -name \"package.json\" -not -path \"**/node_modules/**\" -type f -print0 | xargs -0 -I {} pnpm sort-package-json \"{}\"",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add"
  },
  "prettier": "@torus-ts/prettier-config",
  "devDependencies": {
    "@torus-ts/prettier-config": "workspace:*",
    "@turbo/gen": "^2.1.1",
    "husky": "^9.1.4",
    "prettier": "catalog:",
    "sort-package-json": "^2.10.1",
    "turbo": "^2.1.1",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.7.1",
  "engines": {
    "node": ">=20.16.0"
  }
}
